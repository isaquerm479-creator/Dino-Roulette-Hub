<script>
    let currentLang = 'pt';
    const texts = {
        pt: { title: "ESCOLHA O JOGO", credits: "Esta roleta foi feita por Isaque, espero que goste." },
        en: { title: "CHOOSE YOUR GAME", credits: "This roulette was made by Isaque, hope you enjoy it." }
    };

    function setLang(l) {
        currentLang = l;
        document.getElementById('title').innerText = texts[l].title;
        document.getElementById('credits').innerText = texts[l].credits;
        // Aqui alternamos a classe active nos botões...
    }

    function loadGame(id) {
        alert("Carregando Módulo do Jogo " + id + "...");
        // No próximo passo, faremos este botão abrir a roleta específica!
    }
</script>
